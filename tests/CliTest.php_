<?php

use PHPUnit\Framework\TestCase;

class CliTest extends TestCase
{
    protected function setUp(): void
    {
        parent::setUp();
        resetGlobalState();
    }

    public function testCommandLineOptionParsing()
    {
        $_SERVER['argc'] = 4;
        $_SERVER['argv'] = [
            'vsp.php',
            '-l',
            'q3a',
            'games.log'
        ];

        // Use the actual function name from vsp.php
        global $options;
        processCommandLineArgs();

        $this->assertEquals('q3a', $options['log-gamecode']);
        $this->assertEquals('games.log', $options['logfile']);
    }

    public function testGameTypeOptionParsing()
    {
        $_SERVER['argc'] = 4;
        $_SERVER['argv'] = [
            'vsp.php',
            '-l',
            'q3a-osp',
            'games.log'
        ];

        global $options;
        processCommandLineArgs();

        $this->assertEquals('q3a', $options['log-gamecode']);
        $this->assertEquals('osp', $options['log-gametype']);
    }
}
