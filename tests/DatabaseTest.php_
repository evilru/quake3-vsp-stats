<?php

use PHPUnit\Framework\TestCase;

class DatabaseTest extends TestCase
{

    protected function setUp(): void
    {
        parent::setUp();
        resetGlobalState();
        configureAndProcessGameLogs();  // Updated function name


    }

    protected function tearDown(): void
    {
        parent::tearDown();
        global $db;  // Updated variable name
        if ($db) {
            $db->Close();
        }
    }

    public function testDatabaseConnection()
    {
        global $db;  // Updated variable name
        $this->assertNotNull($db, 'Database connection should be initialized');
    }

    public function testTableStructure()
    {
        global $db;  // Updated variable name
        $tables = [
            'playerprofile',
            'gameprofile',
            'eventdata1d',
            'eventdata2d'
        ];

        foreach($tables as $table) {
            $result = $db->Execute("SHOW TABLES LIKE '{$GLOBALS['cfg']['db']['table_prefix']}$table'");
            $this->assertTrue($result->RecordCount() > 0, "Table $table should exist");
        }
    }

}
