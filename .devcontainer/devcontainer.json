{
  "name": "Q3 Stats PHP Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "codereviewforgithubcopilot.github-copilot-code-review",
        "davidanson.vscode-markdownlint",
        "DEVSENSE.phptools-vscode",
        "eamodio.gitlens",
        "editorconfig.editorconfig",
        "github.copilot-chat",
        "github.copilot",
        "github.vscode-pull-request-github",
        "mehedidracula.php-namespace-resolver",
        "ms-azuretools.vscode-docker",
        "neilbrayfield.php-docblocker",
        "recca0120.vscode-phpunit",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "sonarsource.sonarlint-vscode",
        "task.vscode-task",
        "xdebug.php-debug",
      ],
      "settings": {
        "php.validate.enable": true,
        "php.suggest.basic": true,
        "php.validate.run": "onType",
        "files.associations": {
          "*.php": "php"
        },
        "phpunit.php": "/usr/local/bin/php",
        "phpunit.args": [],
        "php.problems.exclude": {
          "vendor/": true
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.rulers": [
          80,
          120
        ],
        "[php]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
        }
      }
    }
  },
  "forwardPorts": [
    8000
  ],
  "postCreateCommand": "composer install",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/audacioustux/devcontainers/taskfile:1": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "initializeCommand": "docker network create workspace_vsp || true",
  "runArgs": [
    "--network=workspace_vsp"
  ],
  "remoteUser": "vscode",
  "waitFor": "postCreateCommand",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace"
}
